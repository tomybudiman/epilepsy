{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-native",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@store/*": ["./src/redux/*"],
      "@modules/*": ["./src/modules/*"],
      "@localization": ["./src/i18n/index"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}

{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@store/*": ["./src/redux/*"],
      "@modules/*": ["./src/modules/*"],
      "@localization": ["./src/i18n/index"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.d.ts"
  ]
}
